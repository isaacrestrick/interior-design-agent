// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Client {
  id        String   @id @default(uuid())
  name      String
  email     String?
  phone     String?
  rooms     Room[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Room {
  id          String   @id @default(uuid())
  name        String
  description String?
  client      Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId    String
  walls       Wall[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Wall {
  id          String    @id @default(uuid())
  name        String
  widthFeet   Float     // Wall width in feet
  heightFeet  Float     // Wall height in feet
  room        Room      @relation(fields: [roomId], references: [id], onDelete: Cascade)
  roomId      String
  fixtures    Fixture[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Fixture {
  id           String  @id @default(uuid())
  type         String  // e.g., "sink", "mirror", "light", "outlet", "window", etc.
  name         String
  widthInches  Float   // Fixture width in inches
  heightInches Float   // Fixture height in inches
  positionX    Float   // X position from left in inches
  positionY    Float   // Y position from bottom in inches
  productUrl   String? // URL to product/spec
  notes        String?
  wall         Wall    @relation(fields: [wallId], references: [id], onDelete: Cascade)
  wallId       String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
